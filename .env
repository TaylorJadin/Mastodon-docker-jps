DOMAIN=
LETSENCRYPT_EMAIL=

# Single User Mode (https://docs.joinmastodon.org/admin/config/#single_user_mode)
SINGLE_USER_MODE=false

# Performance tuning (https://docs.joinmastodon.org/admin/config/#web_concurrency)
# Set WEB_CONCURRENCY and MAX_THREADS up to 25 for larger servers.
WEB_CONCURRENCY=2
MAX_THREADS=5

# Mail
SMTP_SERVER=smtp.mailgun.org
SMTP_PORT=587
SMTP_LOGIN=
SMTP_PASSWORD=
SMTP_AUTH_METHOD=plain
SMTP_OPENSSL_VERIFY_MODE=none
SMTP_ENABLE_STARTTLS=auto
SMTP_FROM_ADDRESS=

# S3 Storage
S3_ENABLED=false
S3_PROTOCOL=https
S3_BUCKET=
S3_REGION=
S3_HOSTNAME=
S3_ENDPOINT=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Elasticsearch (https://docs.joinmastodon.org/admin/optional/elasticsearch/)
ES_ENABLED=false
ES_HOST=es
ES_PORT=9200
ES_USER=elastic
ES_PASS=elastic

# Database
DATABASE_HOST=db
DATABASE_USER=mastodon
DATABASE_NAME=mastodon
DATABASE_PASSWORD=
DATABASE_PORT=5432

# Mastodon Secrets 
